{
  "compilerOptions": {
    "target": "ESNext",
    "module": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@root/*": [
        "*"
      ],
      "@/*": [
        "app/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "moduleResolution": "nodenext"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "features/Auth/screens/Login/Components",
    "tailwind.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}